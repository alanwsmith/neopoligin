{
  "tests": [
    {
      "title": "endcode on one line",
      "input": "-- endcode\n\nkilo victor\n",
      "expected": [
        {
          "attributes": null,
          "type": "p",
          "body": [
            {
              "type": "paragraph",
              "content": [
                { "type": "text", "string": "kilo" },
                { "type": "space" },
                { "type": "text", "string": "victor" }
              ]
            }
          ]
        }
      ]
    },
    {
      "title": "endcode with attributes",
      "input": "-- endcode\n-- id: victor\nwhiskey tango\n",
      "expected": [
        {
          "attributes": [{ "type": "id", "value": "victor"}],
          "type": "p",
          "body": [
            {
              "type": "paragraph",
              "content": [
                { "type": "text", "string": "whiskey" },
                { "type": "space" },
                { "type": "text", "string": "tango" }
              ]
            }
          ]
        }
      ]
    },
    {
      "title": "endcode on one line without line ending",
      "input": "-- endcode\n\ndelta sierra",
      "expected": [
        {
          "attributes": null,
          "type": "p",
          "body": [
            {
              "type": "paragraph",
              "content": [
                { "type": "text", "string": "delta" },
                { "type": "space" },
                { "type": "text", "string": "sierra" }
              ]
            }
          ]
        }
      ]
    },
    {
      "title": "endcode split across lines",
      "input": "-- endcode\n\nbravo delta\nsierra charlie\n",
      "expected": [
        {
          "attributes": null,
          "type": "p",
          "body": [
            {
              "type": "paragraph",
              "content": [
                { "type": "text", "string": "bravo" },
                { "type": "space" },
                { "type": "text", "string": "delta" },
                { "type": "space" },
                { "type": "text", "string": "sierra" },
                { "type": "space" },
                { "type": "text", "string": "charlie" }
              ]
            }
          ]
        }
      ]
    },
    {
      "title": "endcode multi paragraph",
      "input": "-- endcode\n\ntango whiskey\nvictor mike\n\nhotel sierra\n",
      "expected": [
        {
          "attributes": null,
          "type": "p",
          "body": [
            {
              "type": "paragraph",
              "content": [
                { "type": "text", "string": "tango" },
                { "type": "space" },
                { "type": "text", "string": "whiskey" },
                { "type": "space" },
                { "type": "text", "string": "victor" },
                { "type": "space" },
                { "type": "text", "string": "mike" }
              ]
            },
            {
              "type": "paragraph",
              "content": [
                { "type": "text", "string": "hotel" },
                { "type": "space" },
                { "type": "text", "string": "sierra" }
              ]
            }
          ]
        }
      ]
    }
  ]
}
