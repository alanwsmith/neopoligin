  "_todo_": [
    "<<kbd|*>>",
    "-- code\n-- title: Alfa Bravo\n\nsnippet"
  ],

  "_notes": [
    "NONE is represented by not having a value. e.g. text in textarea"
  ],

  "spec_tests": [

    {
      "ignore": true,
      "name": "Test Template",
      "notes": [],
      "parts": {
        "input": "-- warning\n\nalfa bravo",
        "expected": [
          {
            "type": "warning",
            "attrs": [],
            "paragraphs": [
              {
                "type": "paragraph",
                "tags": [
                  {
                    "type": "text",
                    "text": "alfa bravo"
                  }
                ]
              }
            ]
          }
        ]
      }
    },


    {
      "name": "Aside: All Features",
      "notes": [],
      "parts": {
        "input": "-- aside\n-- id: alfa\n-- class: bravo charlie\n\nPour the stew from\nthe pot into the plate\n\nShut the hatch before the waves push in",
        "expected": [
          {
            "type": "aside",
            "attrs": [
              { "type": "id", "content": "alfa" },
              { "type": "class", "content": ["bravo", "charlie"] }
            ],
            "paragraphs": [
              {
                "type": "paragraph",
                "tags": [
                  {
                    "type": "text",
                    "text": "Pour the stew from the pot into the plate"
                  }
                ]
              },

              {
                "type": "paragraph",
                "tags": [
                  {
                    "type": "text",
                    "text": "Shut the hatch before the waves push in"
                  }
                ]
              }
            ]
          }
        ]
      }
    },


    {
      "name": "Code - No attributes",
      "notes": [],
      "parts": {
        "input": "-- code\n\n   some code",
        "expected": [
          {
            "type": "code",
            "attrs": [],
            "text": "some code"
          }
        ]
      }
    },

    {
      "name": "Code - Language attribute",
      "notes": [],
      "parts": {
        "input": "-- code\n-- html\n\n   some code",
        "expected": [
          {
            "type": "code",
            "attrs": [{ "type": "class", "content": ["language-html"] }],
            "text": "some code"
          }
        ]
      }
    },

    {
      "name": "Code - Language attribute and class",
      "notes": [],
      "parts": {
        "input": "-- code\n-- html\n-- class: something\n\n   some code",
        "expected": [
          {
            "type": "code",
            "attrs": [{ "type": "class", "content": ["something", "language-html"] }],
            "text": "some code"
          }
        ]
      }
    },

    {
      "name": "Code - Language attribute and class",
      "notes": [],
      "parts": {
        "input": "-- startcode\n-- html\n-- class: example\n\n<h2 id=\"sierra\">\n  The <strong class=\"tango\">Quick</strong> Brown Fox\n</h2>\n\n\n-- endcode\n",
        "expected": [
          {
            "type": "code",
            "attrs": [{ "type": "class", "content": ["example", "language-html"] }],
            "text": "<h2 id=\"sierra\">\n  The <strong class=\"tango\">Quick</strong> Brown Fox\n</h2>"
          }
        ]
      }
    },




